{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Crear Examen</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">{{ message }}</div>
    {% endfor %}
    
    <form action="{{ path('app_examen_new_form') }}" method="POST">
        <div class="mb-3">
            <label for="materia" class="form-label">Materia</label>
            <input type="text" name="materia" id="materia" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="nota" class="form-label">Nota</label>
            <input type="number" name="nota" id="nota" class="form-control" min="0" max="10" step="0.1" required>
        </div>
        <div class="mb-3">
            <label for="fecha" class="form-label">Fecha</label>
            <input type="datetime-local" name="fecha" id="fecha" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Crear Examen</button>
    </form>
</div>
{% endblock %}